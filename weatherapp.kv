MDFloatLayout:
    md_bg_color: 1,1,1,1
    Image:
        source: "assets/location.png"
        size_hint: .1,.1
        pos_hint: {"center_x": .5, "center_y": .95}
    
    MDLabel:
        id: location
        pos_hint: {"center_x": .5, "center_y": .85}
        halign: "center"
        font_size: "30sp"
        font_name: "RobotoMono-Regular"
    
    Image:
        id:imagew
        size_hint: .8,.8
        pos_hint: {"center_x": .5, "center_y": .70}

    MDLabel:
        id: temperature
        markup: True
        pos_hint: {"center_x": .5, "center_y": .50}
        halign: "center"
        font_size: "60sp"
    
    MDLabel:
        id: weather
        markup: True
        pos_hint: {"center_x": .5, "center_y": .42}
        halign: "center"
        font_size: "25sp"
    
    MDFloatLayout:
        pos_hint: {"center_x": .25, "center_y": .35}
        size_hint: .22, .1
        
        Image:
            source: "assets/humidity.png"
            pos_hint: {"center_x": .1, "center_y": .1}
            size_hint: 75, .75

        MDLabel:
            id:humidity_level
            markup: True
            pos_hint: {"center_x": .90, "center_y": .3}            
            font_size: "14sp"
        
        MDLabel:
            id: humidity
            markup: True
            pos_hint: {"center_x": .90, "center_y": .09}            
            font_size: "14sp"

    MDFloatLayout:
        pos_hint: {"center_x": .75, "center_y": .35}
        size_hint: .22, .1
        
        Image:
            source: "assets/windy.png"
            pos_hint: {"center_x": .1, "center_y": .1}
            size_hint: 75, .75

        MDLabel:
            id: wind_speed
            markup: True
            pos_hint: {"center_x": .95, "center_y": .35}            
            font_size: "14sp"
        
        MDLabel:
            id: wind
            
            markup: True
            pos_hint: {"center_x": .95, "center_y": .00}            
            font_size: "14sp"
    MDFloatLayout:
        pos_hint: {"center_x": 0.5, "center_y": 0.10}
        size_hint:1,.32
        canvas:
            Color:
                rgb: rgba(255,0,255,255)
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [6]
       
        TextInput:           
            padding: 15
            margin: 15
            size_hint: 1, None
            hint_text:"Enter new city"
            id:new_city
            pos_hint:{"center_x": 0.5, "center_y": 0.7}
            background_color:1,1,1,1
            height: self.minimum_height
            multiline : False
            font_size: "20sp"
            background_color: 1,0,1,1
            foreground_color:1,1,1,1
            hint_text_color:1,1,1,1
        Button:
            text:"Get Weather"
            md_bg_color:1,1,1,0
            color:rgba(148,117,255,255)
            size_hint: 0.9,0.32
            pos_hint:{"center_x": 0.5, "center_y": 0.35}
            on_press:app.run_searchplaces()
    